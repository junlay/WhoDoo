<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#123123"
    tools:context="com.example.whodoo.Fragments.CreateProjectFragment"
    tools:layout_editor_absoluteY="25dp">


    <EditText
        android:id="@+id/descriptionText"
        android:layout_width="167dp"
        android:layout_height="31dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/titleproject"
        android:hint="description"
        app:layout_constraintEnd_toStartOf="@+id/listView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/titleText"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/titleproject"
        android:hint="title "
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionText" />


    <EditText
        android:id="@+id/addUserText"
        android:layout_width="168dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/titleproject"
        android:hint="add username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <Button
        android:id="@+id/addMemberBtn"
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/addtasktime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addUserText" />

    <Button
        android:id="@+id/createProjectBtn"
        android:layout_width="136dp"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/btncreateproject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addUserText" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="67dp"
        android:layout_height="112dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <DatePicker
        android:id="@+id/datePicker2"
        android:layout_width="353dp"
        android:layout_height="356dp"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMemberBtn" />


</android.support.constraint.ConstraintLayout>