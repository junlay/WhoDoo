<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nybackground"
    tools:context="com.example.whodoo.Fragments.ViewTaskFragment">

    <!-- TODO: Update blank fragment layout -->


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="147dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/whodo"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/backButton3"
            android:layout_width="59dp"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/backbuttom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/taskTitleView"
            android:layout_width="106dp"
            android:layout_height="386dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <ListView
            android:id="@+id/taskTimeView"
            android:layout_width="112dp"
            android:layout_height="386dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toStartOf="@+id/taskDescriptionView"
            app:layout_constraintStart_toEndOf="@+id/taskTitleView"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <ListView
            android:id="@+id/taskDescriptionView"
            android:layout_width="129dp"
            android:layout_height="386dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/taskTimeView"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
