<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.whodoo.Fragments.SignUpFragment">

    <!-- TODO: Update blank fragment layout -->


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <Button
            android:id="@+id/create_accountBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="94dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/createaccount"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/field1"
            android:layout_marginLeft="4dp" />

        <EditText
            android:id="@+id/field1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="154dp"
            android:layout_marginStart="72dp"
            android:hint="username"
            android:drawableLeft="@drawable/ic_action_username"
            android:layout_marginTop="170dp"
            app:layout_constraintBottom_toTopOf="@+id/create_accountBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="72dp" />

        <EditText
            android:id="@+id/field2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="password"
            android:drawableLeft="@drawable/ic_action_password"
            android:layout_marginStart="72dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/field1"
            android:layout_marginLeft="72dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="133dp"
            android:layout_marginTop="83dp"
            android:background="@drawable/whodo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="133dp" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
