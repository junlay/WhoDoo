<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.whodoo.Fragments.SignUpFragment"
    android:background="#123132">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/create_accountBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="94dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/createaccount"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/field1"
            android:layout_marginLeft="4dp" />

        <EditText
            android:id="@+id/field1"
            android:layout_width="241dp"
            android:layout_height="44dp"
            android:layout_marginBottom="154dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/username"
            app:layout_constraintBottom_toTopOf="@+id/create_accountBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="72dp" />

        <EditText
            android:id="@+id/field2"
            android:layout_width="240dp"
            android:layout_height="43dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/password"
            android:inputType="textVisiblePassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/field1"
            android:layout_marginLeft="72dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="180dp"
            android:layout_height="58dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/whodo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="100dp" />


    </android.support.constraint.ConstraintLayout>

</FrameLayout>
